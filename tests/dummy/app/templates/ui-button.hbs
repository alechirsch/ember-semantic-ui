<div class="ui grid" >
    <div class="row">
        <div class="column">
            <div class="ui segments">
                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-button' 0)}}
                </div>           
                <div class="ui segment">
                     {{#ui-button theme="basic"}}button{{/ui-button}}
                </div>

                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-button' 1)}}
                </div>           
                <div class="ui segment">
                     {{#ui-button theme="basic" loading=true}}button{{/ui-button}}
                </div>

                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-button' 2)}}
                </div>           
                <div class="ui segment">
                     {{#ui-button  disabled=true }}button{{/ui-button}}
                </div>

                
                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-button' 3)}}
                </div>
                <div class="ui segment">
                    {{#ui-button theme="primary" }}button{{/ui-button}}
                </div>
                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-button' 4)}}
                </div>
                <div class="ui segment">
                    {{#ui-button theme="secondary" }}button{{/ui-button}}
                </div>
                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-button' 5)}}
                </div>
                <div class="ui segment">
                    {{#ui-button theme="red" }}button{{/ui-button}}
                </div>

                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-button' 6)}}
                </div>
                <div class="ui segment">
                    {{#ui-button theme="compact" action=(action "clickMe" 'value') }}
                        <i class="icon heart"></i>
                        heart
                    {{/ui-button}}
                </div>
            </div>
        </div>
    </div>
</div>