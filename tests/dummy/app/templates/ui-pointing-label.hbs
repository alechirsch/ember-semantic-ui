                    {{/ui-pointing-label}}
                </div>


                 <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-pointing-label' 3)}}
                </div>
                <div class="ui segment">
                    {{#ui-pointing-label direction="left" }}
                        left label
                    {{/ui-pointing-label}}
                </div>

                 <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-pointing-label' 4)}}
                </div>
                <div class="ui segment">
                    {{#ui-pointing-label direction="right" }}
