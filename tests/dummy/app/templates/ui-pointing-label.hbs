{{outlet}}

<div class="ui grid" >
    <div class="row">
        <div class="column">
            <div class="ui segments">
                 
                 <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-pointing-label' 0)}}
                </div>           
                <div class="ui segment">
                    {{#ui-pointing-label theme="red" direction="left" }}
                        below label
                    {{/ui-pointing-label}}
                </div>
                
                <div class="ui secondary segment">
                    {{code-highlight code=(code-show 'ui-pointing-label' 1)}}
                </div>
