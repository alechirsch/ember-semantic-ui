{{#if hasBlockParams}}
    <input type="file" name="file" >
    {{yield uploader (action "start") (action "abort") }}
{{else}}
    <input type="file" name="file" >
    {{#unless autoUpload}}
        {{#ui-button loading=isUploading theme=theme action="start"}}upload{{/ui-button}}
    {{/unless}}
{{/if}}